<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectBWeather.Views.AboutPage">

	<ScrollView>
		<VerticalStackLayout
            Padding="30,0"
            Spacing="25">
			

			<Label
                Text="TESTING TESTING 123..."
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

			<Label
                Text="Welcome to .NET Maui Weather Service!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Weather Service" />

			<Label
                x:Name="CreatedByLabel"
                Style="{StaticResource SubHeadline}"
                Text="Created by Erik Forsgren"
                FontSize="16" />

			
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>