<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiProjectBWeather.Models"
             x:Class="MauiProjectBWeather.Views.ForecastPage"
             BackgroundColor="White"
             Shell.BackgroundColor="CornflowerBlue"
             Shell.TitleColor="White">
    <ContentPage.Content>
        <StackLayout>
            <HorizontalStackLayout
                HorizontalOptions="FillAndExpand">
                
                <Image x:Name="CityImage"
                   HeightRequest="160"
                   WidthRequest="160"
                   Aspect="AspectFill"
                   HorizontalOptions="Center"
                   Margin="10,10,30,8" />
               
                <Label 
                    x:Name="ForecastHeader"
                    FontSize="Header"
                    HorizontalOptions="Start"
                    VerticalOptions="Start">
                </Label>
            </HorizontalStackLayout>
            <Button Text="Refresh" Clicked="Button_Clicked" Margin="200,10,40,-40" TranslationY="-62" BackgroundColor="SteelBlue"/>
            <ListView x:Name="GroupedForecast" IsGroupingEnabled="true" HasUnevenRows="true">
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell Height="40">
                            <Grid HeightRequest="40" BackgroundColor="CornflowerBlue" Padding="5">
                                <Label FontSize="16" TextColor="White" VerticalOptions="Center" Text="{Binding Key, StringFormat='{0:D}'}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ForecastItem">
                        <ViewCell>
                            <Grid ColumnDefinitions="Auto,*" Padding="3">
                                <Image Grid.Column="0" Source="{Binding Icon}" HeightRequest="50" VerticalOptions="Start" Margin="0,3,0,3"/>
                                <Grid Grid.Column="1" RowDefinitions="Auto,Auto,Auto" Padding="5">
                                    <Label Grid.Row="0" FontSize="18" FontAttributes="Bold" Text="{Binding DateTime, StringFormat='{0:t} -'}"/>
                                    <Label Grid.Row="0" Grid.Column="1" Margin="65,0" FontSize="18" FontAttributes="Bold" Text="{Binding Description}"/>
                                    <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto">
                                        <Label Grid.Column="0" FontSize="16" Text="{Binding Temperature, StringFormat='Temperature: {0}°C'}" Margin="0,0,10,0"/>
                                        <Label Grid.Column="1" FontSize="16" Text="{Binding WindSpeed, StringFormat='Windspeed: {0}m/s'}"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>